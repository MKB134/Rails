<h1><%= @test_passage.test.title %> Test</h1>

<h3><%= t('.question', q_number: @test_passage.question_number, q_count: @test_passage.test.questions.count) %> </h3>

<p>
  <%= @test_passage.current_question.body %>
</p>



<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :body, include_hidden: false do |b| %>
  <p>
    <%= b.check_box id: "answer_ids_#{b.object.id}" %>
    <%= b.label %>
  </p>
  <% end %>

<div class="progress">
  <%= tag.div class: "progress-bar", id: 'test-progress',
              data: { question_number: @test_passage.question_number,
                      question_count: @test_passage.test.questions.count } %>
</div>

  <p><%= link_to t('.gist_question'), gist_path(@test_passage), method: :post %></p>
  <p><%= form.submit t('.next') %></p>
<% end %>
